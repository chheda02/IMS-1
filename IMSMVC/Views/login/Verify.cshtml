@model IMSMVC.Models.verify

@{
    ViewBag.Title = "Verify";
}

<div style="height:65vh;">

    <div class="card border-info mx-auto mb-3 shadow " style="max-width: 30rem; margin-top:90px">

        <div class="card-header"><h4>Verify</h4></div>

        <div class="card-body mx-auto">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="text-success">
                    <strong>OTP sent</strong> on your E-mail ID!
                </div>

                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-key"></i></span>
                        </div>
                        @Html.EditorFor(model => model.otp, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter OTP" } })
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.otp, "", new { @class = "text-danger" })

                <div class="form-group">
                    <input type="submit" value="Verify" class="btn btn-outline-primary btn-block" />
                </div>

            }
        </div>
    </div>
</div>
